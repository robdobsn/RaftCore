    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python debug UpdateLegacySysTypesJson",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/UpdateLegacySysTypesJson.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "${workspaceFolder}/test_data",
            ]
        },
        {
            "name": "(gdb) G++ build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/linux_unit_tests/linux_unit_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/linux_unit_tests",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "C/C++: g++ build linux_unit_tests",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Linux unit tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/linux_unit_tests/linux_unit_tests",
            "args": [],
