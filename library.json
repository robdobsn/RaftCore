{
  "name": "RaftCore",
  "version": "1.0.0",
  "description": "Core elements for the Raft ESP32 framework",
  "keywords": "esp32, esp32s3, framework",
  "repository":
  {
    "type": "git",
    "url": "https://github.com/robdobsn/RaftCore"
  },
  "authors":
  [
    {
      "name": "Rob Dobson",
      "email": "rob@dobson.com",
      "url": "https://robdobson.com",
      "maintainer": true
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/robdobsn/RaftCore",
  "frameworks": ["arduino", "espidf"],
  "platforms": ["espressif32"],
  "build": {
      "srcDir": "src",
      "includeDir": "src",
    "libLDFMode": "deep+",
    "libArchive": false,
    "extraScript": "lib_script.py",
    "flags": [
        "-Isrc/APICommon",
        "-Isrc/ArduinoUtils",
        "-Isrc/Config",
        "-Isrc/ConfigPinMap",
        "-Isrc/DebounceButton",
        "-Isrc/ExpressionEval",
        "-Isrc/libb64",
        "-Isrc/Logger",
        "-Isrc/MiniHDLC",
        "-Isrc/NumericalFilters",
        "-Isrc/RingBuffer",
        "-Isrc/SupervisorStats",
        "-Isrc/ThreadSafeQueue",
        "-Isrc/Utils"
    ]
  }
}